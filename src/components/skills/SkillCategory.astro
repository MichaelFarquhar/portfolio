---
import SkillBadge from './SkillBadge.astro';

interface Skill {
    src: string;
    title: string;
    group: string;
}

interface Props {
    title: string;
    skills: Skill[] | [];
}

const { title, skills } = Astro.props;
---

<div class="mb-8">
    <h3 class="font-bold uppercase mb-2 opacity-90 flex items-center space-x-2">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-5 h-5"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"
            ></path>
        </svg>
        <span style="line-height: normal;">{title}</span>
    </h3>
    {
        skills && (
            <div class="flex flex-wrap my-4 space-x-4">
                {skills.map((skill) => (
                    <SkillBadge src={skill.src} alt={skill.title} group={skill.group} />
                ))}
            </div>
        )
    }
</div>
