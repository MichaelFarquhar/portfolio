---
import BaseLayout from '../layouts/BaseLayout.astro';
import SkillsSection from '../layouts/SkillsSection.astro';
import WaveIcon from '../components/WaveIcon.astro';
import ProjectList from '../components/ProjectList.astro';
---

<BaseLayout>
    <section id="about">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-36 h-36 opacity-5"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"
            ></path>
        </svg>

        <div class="mt-5">
            <h1 class="text-6xl font-bold mb-8 flex items-center flex-wrap gap-y-6">
                Hey, I'm Michael. <WaveIcon />
            </h1>
            <div class="pt-2 pb-4">
                <text class="text-lg">
                    Experienced web developer with 3+ years of experience designing and
                    implementing engaging, user-friendly web experiences. Primarily
                    skilled in React, Sass, PHP and MySQL, with a strong focus on
                    responsive design and accessibility.
                </text>
            </div>
            <div class="mt-8 flex items-center flex-wrap gap-6">
                <a
                    class="btn btn-primary gap-3 font-bold"
                    href="#"
                    onclick="let username = String.fromCharCode(109, 105, 99, 104, 97, 101, 108, 102, 97, 114, 113, 117, 104, 97, 114, 52); let domain = String.fromCharCode(103, 109, 97, 105, 108, 46, 99, 111, 109); this.href = 'mailto:' + username + '@' + domain;"
                    aria-label="Email me"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="w-5 h-5"
                    >
                        <path
                            d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"
                        ></path>
                        <path
                            d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"
                        ></path>
                    </svg>

                    Contact Me!
                </a>
                <a
                    class="btn btn-outline btn-error gap-3 font-bold"
                    href="#"
                    aria-label="Open Resume PDF"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="w-5 h-5"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M5.625 1.5c-1.036 0-1.875.84-1.875 1.875v17.25c0 1.035.84 1.875 1.875 1.875h12.75c1.035 0 1.875-.84 1.875-1.875V12.75A3.75 3.75 0 0 0 16.5 9h-1.875a1.875 1.875 0 0 1-1.875-1.875V5.25A3.75 3.75 0 0 0 9 1.5H5.625ZM7.5 15a.75.75 0 0 1 .75-.75h7.5a.75.75 0 0 1 0 1.5h-7.5A.75.75 0 0 1 7.5 15Zm.75 2.25a.75.75 0 0 0 0 1.5H12a.75.75 0 0 0 0-1.5H8.25Z"
                            clip-rule="evenodd"></path>
                        <path
                            d="M12.971 1.816A5.23 5.23 0 0 1 14.25 5.25v1.875c0 .207.168.375.375.375H16.5a5.23 5.23 0 0 1 3.434 1.279 9.768 9.768 0 0 0-6.963-6.963Z"
                        ></path>
                    </svg>

                    View Resume
                </a>
            </div>
        </div>
    </section>

    <section id="projects" class="mt-24">
        <h2 class="text-4xl w-full font-bold mb-8">My Projects</h2>
        <ProjectList />
    </section>

    <SkillsSection />
</BaseLayout>
